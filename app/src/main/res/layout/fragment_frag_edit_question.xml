<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragEditQuestion">

    <EditText
        android:id="@+id/new_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:hint="@string/enter_question_text"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioButton
        android:id="@+id/correct_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_question_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onRadioClick" />

    <EditText
        android:id="@+id/edit_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:hint="@string/enter_answer_text"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="@id/correct_button1"
        app:layout_constraintLeft_toRightOf="@id/correct_button1"
        app:layout_constraintBottom_toBottomOf="@id/correct_button1" />

    <RadioButton
        android:id="@+id/correct_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onRadioClick" />

    <EditText
        android:id="@+id/edit_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:hint="@string/enter_answer_text"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="@id/correct_button2"
        app:layout_constraintLeft_toRightOf="@id/correct_button2"
        app:layout_constraintBottom_toBottomOf="@id/correct_button2" />

    <RadioButton
        android:id="@+id/correct_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_button2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onRadioClick" />

    <EditText
        android:id="@+id/edit_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:hint="@string/enter_answer_text"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="@id/correct_button3"
        app:layout_constraintLeft_toRightOf="@id/correct_button3"
        app:layout_constraintBottom_toBottomOf="@id/correct_button3" />

    <RadioButton
        android:id="@+id/correct_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_button3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onRadioClick" />

    <EditText
        android:id="@+id/edit_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:hint="@string/enter_answer_text"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="@id/correct_button4"
        app:layout_constraintLeft_toRightOf="@id/correct_button4"
        app:layout_constraintBottom_toBottomOf="@id/correct_button4" />

</androidx.constraintlayout.widget.ConstraintLayout>